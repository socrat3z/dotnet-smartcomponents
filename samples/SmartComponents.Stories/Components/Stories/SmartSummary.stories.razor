        <Template>
             <div style="padding: 20px;">
                <h3>Inline Tooltip Example</h3>
                <p>
                    Hover over the following text to see a summary:
                </p>
                <div style="border: 1px dashed #999; padding: 10px; display: inline-block;">
                    <SmartSummary Mode="SmartSummary.SmartSummaryMode.InlineTooltip" Text="This is a complex paragraph that needs a tl;dr summary...">
